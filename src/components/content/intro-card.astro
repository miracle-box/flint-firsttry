---
type Props = {
	fullWidth?: boolean;
};

const fullWidth = Astro.props.fullWidth ?? false;
---

<div
	class="intro-card flex flex-col items-center rounded-lg border border-gray-200 p-2 text-center"
	class:list={fullWidth ? 'col-span-full' : 'col-span-1'}
>
	<slot />
</div>

<style is:inline>
	.intro-card h2 {
		font-weight: 500;
		border-bottom: 0;
	}

	.intro-card p {
		/* font-size: ; */
	}

	.intro-card ul {
		padding: 0;
	}

	.intro-card ul > li {
		display: inline;
		font-size: 14px;
	}

	.intro-card ul > li:not(:last-child)::after {
