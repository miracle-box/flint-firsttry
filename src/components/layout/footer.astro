---
import { siteConfig } from '~/config';
---

<footer
	class="mt-auto flex flex-col items-center justify-center gap-1 px-4 py-4 text-sm text-gray-500 sm:flex-row sm:gap-4"
>
	<div class="flex gap-1">
		<img class="my-auto h-4 w-4 flex-grow-0" alt="" src="/images/sec-record.png" />
		<a class="hover:text-gray-900" href={siteConfig.site.secRecordLink} rel="nofollow noopener"
			>{siteConfig.site.secRecordText}</a
		>
	</div>
	<a class="hover:text-gray-900" href={siteConfig.site.icpRecordLink} rel="nofollow noopener"
		>{siteConfig.site.icpRecordText}</a
	>
</footer>
