{
  "name": "@losenone/web-front",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "npm-run-all --parallel i18n:gen-types astro:dev",
    "check": "npm-run-all --continue-on-error --silent i18n:gen-types-ci format:check --parallel astro:check ts:check lint:check",
    "build": "npm-run-all check astro:build",
    "astro:dev": "astro dev",
    "astro:check": "astro check",
    "astro:build": "astro build",
    "astro:preview": "astro preview",
    "i18n:gen-types": "typesafe-i18n",
    "i18n:gen-types-ci": "typesafe-i18n --no-watch",
    "ts:check": "tsc --noEmit",
    "format:check": "prettier . --check --ignore-path ./.gitignore --plugin-search-dir=.",
    "format:fix": "prettier . --write --ignore-path ./.gitignore --plugin-search-dir=.",
    "lint:check": "eslint . --ignore-path ./.gitignore",
    "lint:fix": "eslint . --ignore-path ./.gitignore"
  },
  "dependencies": {
    "@astrojs/mdx": "^0.19.1",
    "@astrojs/solid-js": "^2.1.1",
    "@astrojs/tailwind": "^3.1.2",
    "@fontsource/fira-mono": "^4.5.10",
    "@fontsource/inter": "^4.5.15",
    "@fontsource/noto-sans-sc": "^4.5.12",
    "astro": "^2.4.2",
    "solid-headless": "^0.13.1",
    "solid-js": "^1.7.5",
    "typesafe-i18n": "^5.24.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^0.57.0",
    "eslint-plugin-astro": "^0.26.1",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-solid": "^0.12.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "prettier": "2.8.8",
    "prettier-plugin-astro": "^0.8.0",
    "stylelint": "^15.6.1",
    "stylelint-config-standard": "^33.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "xo": "^0.54.2"
  }
}
