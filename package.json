{
  "name": "@miracle-box/astro-theme-rocket",
  "author": {
    "name": "The Miracle Box",
    "email": "contact@sagirii.me",
    "url": "https://sagirii.me"
  },
  "license": "Apache-2.0",
  "version": "0.1.1",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "run-p i18n:gen-types astro:dev",
    "check": "npm-run-all --silent --parallel check:prettier astro:gen-types i18n:gen-types-ci --parallel check:astro check:tsc check:eslint",
    "build": "run-s i18n:gen-types-ci astro:build",
    "preview": "astro preview",
    "fix:prettier": "prettier . --write --ignore-path ./.gitignore --plugin-search-dir=.",
    "fix:eslint": "eslint . --fix --ignore-path ./.gitignore",
    "check:prettier": "prettier . --check --loglevel warn --ignore-path ./.gitignore --plugin-search-dir=.",
    "check:astro": "astro check",
    "check:tsc": "tsc --noEmit",
    "check:eslint": "eslint . --ignore-path ./.gitignore",
    "i18n:gen-types": "typesafe-i18n",
    "i18n:gen-types-ci": "typesafe-i18n --no-watch",
    "astro:dev": "astro dev",
    "astro:build": "astro build",
    "astro:gen-types": "astro sync"
  },
  "dependencies": {
    "@astrojs/mdx": "^0.19.1",
    "@astrojs/solid-js": "^2.1.1",
    "@astrojs/tailwind": "^3.1.2",
    "@fontsource/fira-mono": "^4.5.10",
    "@fontsource/inter": "^4.5.15",
    "@fontsource/noto-sans-sc": "^4.5.12",
    "@iconify-json/octicon": "^1.1.44",
    "astro": "^2.4.2",
    "github-markdown-css": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "solid-headless": "^0.13.1",
    "solid-js": "^1.7.5",
    "tailwindcss": "^3.3.2",
    "typesafe-i18n": "^5.24.3",
    "unplugin-icons": "^0.16.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^0.57.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-astro": "^0.26.1",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-solid": "^0.12.1",
    "prettier": "2.8.8",
    "prettier-plugin-astro": "^0.8.0",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "typescript": "^5.0.4",
    "xo": "^0.54.2"
  }
}
