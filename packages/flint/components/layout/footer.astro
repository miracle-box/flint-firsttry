---
import Config from 'virtual:flint/config';
import { getPathname } from '../../utils/route';
---

<footer
	class="mt-auto flex flex-col items-center justify-center gap-1 px-4 py-4 text-sm text-gray-500 sm:flex-row sm:gap-4"
>
	<div class="flex gap-1">
		<img class="my-auto h-4 w-4 flex-grow-0" alt="" src={getPathname('images/sec-record.png')} />
		<a class="hover:text-gray-900" href={Config.legacy.secRecordLink} rel="nofollow noopener"
			>{Config.legacy.secRecordText}</a
		>
	</div>
	<a class="hover:text-gray-900" href={Config.legacy.icpRecordLink} rel="nofollow noopener"
		>{Config.legacy.icpRecordText}</a
	>
</footer>
